{
  "name": "base-workplace",
  "version": "0.0.0",
  "engines": {
    "node": "18.17.1",
    "npm": "9.6.7"
  },
  "volta": {
    "node": "18.17.1"
  },
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "lint": "ng lint",
    "lint:fix": "npx ng lint --fix",
    "prettier": "npx prettier --write .",
    "cspell:check": "cspell \"**/*.{js,json,yaml,ts,css,scss,md}\" --no-progress --show-suggestions --show-context --cache --gitignore",
    "stylelint:fix": "npx stylelint '**/*.{scss,css}' --fix",
    "prepare": "husky install",
    "build:pwa-app:watch": "ng build --project pwa-app --watch",
    "start:pwa-app": "npx http-server -p 8080 -c-1 dist/pwa-app/browser"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^17.0.5",
    "@angular/common": "^17.0.5",
    "@angular/compiler": "^17.0.5",
    "@angular/core": "^17.0.5",
    "@angular/forms": "^17.0.5",
    "@angular/platform-browser": "^17.0.5",
    "@angular/platform-browser-dynamic": "^17.0.5",
    "@angular/router": "^17.0.5",
    "@angular/service-worker": "^17.0.5",
    "@ngneat/transloco": "^6.0.4",
    "lodash-es": "^4.17.21",
    "rxjs": "~7.5.0",
    "tslib": "^2.3.0",
    "url-join": "^5.0.0",
    "zone.js": "~0.14.2"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^17.0.5",
    "@angular-eslint/builder": "17.2.0",
    "@angular-eslint/eslint-plugin": "17.2.0",
    "@angular-eslint/eslint-plugin-template": "17.2.0",
    "@angular-eslint/schematics": "17.2.0",
    "@angular-eslint/template-parser": "17.2.0",
    "@angular/cli": "~17.0.5",
    "@angular/compiler-cli": "^17.0.5",
    "@angular/localize": "^17.0.5",
    "@commitlint/cli": "^18.0.0",
    "@commitlint/config-angular": "^18.0.0",
    "@cspell/eslint-plugin": "^7.3.7",
    "@types/jasmine": "~4.3.0",
    "@types/lodash-es": "^4.17.10",
    "@typescript-eslint/eslint-plugin": "^6.10.0",
    "@typescript-eslint/eslint-plugin-tslint": "^6.4.0",
    "@typescript-eslint/parser": "^6.10.0",
    "@typescript-eslint/utils": "^6.10.0",
    "cspell": "^7.3.7",
    "eslint": "^8.53.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-import-resolver-typescript": "^3.6.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-jsdoc": "^46.8.2",
    "eslint-plugin-prettier": "^5.0.0",
    "file-entry-cache": "^7.0.0",
    "http-server": "^14.1.1",
    "husky": "^8.0.3",
    "jasmine-core": "~4.5.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.0.0",
    "lint-staged": "^15.0.2",
    "ng-packagr": "^17.0.2",
    "postcss-lit": "^1.1.0",
    "prettier": "^3.0.2",
    "prettier-eslint": "^15.0.1",
    "stylelint": "^15.10.3",
    "stylelint-config-prettier-scss": "^1.0.0",
    "stylelint-config-sass-guidelines": "^10.0.0",
    "stylelint-config-standard-scss": "^11.0.0",
    "stylelint-order": "^6.0.3",
    "typescript": "~5.2.2"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "eslint --fix"
    ],
    "*.{css,scss}": [
      "npm run stylelint:fix"
    ],
    "*": [
      "npm run prettier",
      "npm run cspell:check"
    ]
  }
}
