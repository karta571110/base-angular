{
  "name": "base-workplace",
  "version": "0.0.0",
  "engines": {
    "node": "20.17.0",
    "npm": "10.8.2"
  },
  "volta": {
    "node": "20.17.0"
  },
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "dev": "ng serve base-app",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "jest",
    "lint": "ng lint",
    "lint:fix": "npx ng lint --fix",
    "prettier": "npx prettier --write .",
    "cspell:check": "cspell \"**/*.{js,json,yaml,ts,css,scss,md}\" --no-progress --show-suggestions --show-context --cache --gitignore",
    "stylelint:fix": "npx stylelint '**/*.{scss,css}' --fix",
    "prepare": "husky install",
    "sonar-scanner": "node_modules/sonar-scanner/bin/sonar-scanner",
    "docker:build": "docker rm neo-canvas -f && docker build -t neo-canvas/app . && npm run docker:run",
    "docker:run": "docker run -d -it -p 4200:80/tcp --name neo-canvas neo-canvas/app"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^19.1.0",
    "@angular/cdk": "^19.0.5",
    "@angular/common": "^19.1.0",
    "@angular/compiler": "^19.1.0",
    "@angular/core": "^19.1.0",
    "@angular/forms": "^19.1.0",
    "@angular/material": "^19.0.5",
    "@angular/material-date-fns-adapter": "^19.0.5",
    "@angular/platform-browser": "^19.1.0",
    "@angular/platform-browser-dynamic": "^19.1.0",
    "@angular/router": "^19.1.0",
    "@angular/service-worker": "^19.1.0",
    "@jsverse/transloco": "^7.4.2",
    "date-fns": "^3.6.0",
    "lodash-es": "^4.17.21",
    "material-symbols": "^0.25.1",
    "rxjs": "~7.5.0",
    "swiper": "^11.1.14",
    "tslib": "^2.3.0",
    "url-join": "^5.0.0",
    "zone.js": "~0.15.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^19.1.0",
    "@angular-eslint/builder": "19.0.2",
    "@angular-eslint/eslint-plugin": "19.0.2",
    "@angular-eslint/eslint-plugin-template": "19.0.2",
    "@angular-eslint/schematics": "19.0.2",
    "@angular-eslint/template-parser": "19.0.2",
    "@angular/cli": "~19.1.0",
    "@angular/compiler-cli": "^19.1.0",
    "@angular/localize": "^19.1.0",
    "@commitlint/cli": "^18.0.0",
    "@commitlint/config-angular": "^18.0.0",
    "@cspell/eslint-plugin": "^7.3.7",
    "@types/jest": "^29.5.14",
    "@types/lodash-es": "^4.17.12",
    "@typescript-eslint/eslint-plugin": "^7.2.0",
    "@typescript-eslint/eslint-plugin-tslint": "^6.4.0",
    "@typescript-eslint/parser": "^7.2.0",
    "@typescript-eslint/utils": "^8.4.0",
    "cspell": "^7.3.7",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-import-resolver-typescript": "^3.6.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-jsdoc": "^46.8.2",
    "eslint-plugin-prettier": "^5.0.0",
    "file-entry-cache": "^7.0.0",
    "http-server": "^14.1.1",
    "husky": "^8.0.3",
    "jasmine-core": "~4.5.0",
    "jest": "^29.7.0",
    "jest-preset-angular": "^14.5.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.0.0",
    "lint-staged": "^15.0.2",
    "ng-packagr": "^19.1.0",
    "postcss-lit": "^1.1.0",
    "prettier": "^3.0.2",
    "prettier-eslint": "^15.0.1",
    "sonar-scanner": "^3.1.0",
    "stylelint": "^15.10.3",
    "stylelint-config-prettier-scss": "^1.0.0",
    "stylelint-config-sass-guidelines": "^10.0.0",
    "stylelint-config-standard-scss": "^11.0.0",
    "stylelint-order": "^6.0.3",
    "ts-node": "^10.9.2",
    "typescript": "~5.5.4"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "eslint --fix"
    ],
    "*.{css,scss}": [
      "npm run stylelint:fix"
    ],
    "*": [
      "npm run prettier",
      "npm run cspell:check"
    ]
  }
}
