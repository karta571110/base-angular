{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "../../out-tsc/spec",
    "types": ["jest"],
    "paths": {
      "@src/*": ["apps/base-app/src/*"],
      "@shared/*": ["apps/base-app/src/app/shared/*"],
      "@common-lib": ["libs/common-lib"],
      "@common/sdk": ["libs/common/sdk/src/index.ts"],
      //寫成絕對路徑可以準確找到檔案
      "@common/sdk/form": ["libs/common/sdk/form/index.ts"],
      "@common/sdk/i18n": ["libs/common/sdk/i18n/index.ts"],
      "@common/sdk/ui": ["libs/common/sdk/ui/index.ts"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.spec.ts", "src/**/*.d.ts"]
}
